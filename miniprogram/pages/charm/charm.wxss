page {
  height: 100%;
}

.container {
  padding: 0;
  height: 100%;
  background: linear-gradient(180deg, rgba(31, 41, 56, 0.45) 0%, rgba(28, 37, 50, 0.7) 77%, rgba(28, 37, 50, 1) 100%);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.show {
  width: 600rpx;
  height: 600rpx;
  border: 2rpx dotted rgba(239, 239, 239, 1);
  margin-top: 72rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
}

.show-img {
  width: 300rpx;
  height: 276rpx;
  /* border: 2rpx dotted rgba(239, 239, 239, .2);
  border-radius: 12rpx; */
}

.tips-text {
  width: 252rpx;
  height: 42rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 42rpx;
}

.btn-group {
  width: 100%;
  height: 120rpx;
  background: rgba(49, 114, 238, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-img {
  width: 54rpx;
  height: 54rpx;
  margin-right: 10rpx;
}

.btn-text {
  width: 84rpx;
  height: 50rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 50rpx;
  letter-spacing: 4rpx;
}

.ipx {
  bottom: 68rpx;
  margin-bottom: 68rpx;
}

.ipx::after {
  content: ' ';
  position: fixed;
  bottom: 0;
  height: 68rpx;
  width: 100%;
  background: rgba(49, 114, 238, 1);
}
