/* pages/image-tag/image-tag.wxss */

page {
    height: 100%;
}

.container {
    padding: 0;
    height: 100%;
    background: rgba(249, 249, 249, 1);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

.tips-text {
    width: 532rpx;
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(170, 170, 170, 1);
    line-height: 40rpx;
    margin-top: 20rpx;
}

.origin-img {
    width: 600rpx;
}

.tags {
    margin-top: 60rpx;
    width: 600rpx;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
}

.tag {
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(0, 0, 0, 1);
    line-height: 40rpx;
    padding: 8rpx 14rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    border: 2rpx solid rgba(151,151,151,1);
}

.btn-group {
    width: 100%;
    height: 120rpx;
    background: rgba(49, 114, 238, 1);
    display: flex;
    justify-content: center;
    align-items: center;
}

.btn-img {
    width: 54rpx;
    height: 54rpx;
    margin-right: 10rpx;
}

.btn-text {
    width: 84rpx;
    height: 50rpx;
    font-size: 36rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    line-height: 50rpx;
    letter-spacing: 4rpx;
}

.ipx {
    bottom: 68rpx;
    margin-bottom: 68rpx;
}

.ipx::after {
    content: ' ';
    position: fixed;
    bottom: 0;
    height: 68rpx;
    width: 100%;
    background: rgba(49, 114, 238, 1);
}